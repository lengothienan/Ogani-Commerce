
@{
    ViewBag.Title = "InforOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model List<Library.InforOrder>
<section class="breadcrumb-section set-bg" data-setbg="/Content/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Information Order</h2>
                    <div class="breadcrumb__option">
                        <a href="/Home/Index">Home</a>
                        <span>Information Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @{
                    if (Model == null || Model.Count() == 0)
                    {
                        <h4 align="center">Your Order is empty</h4>
                    }
                    else
                    {
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Products</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (Library.InforOrder item in Model)
                                        {
                                            <tr>
                                                <td class="shoping__cart__item">
                                                    @{
                                                        ActionDB.Code code = new ActionDB.Code();

                                                    }
                                                    <h5>@code.GetProduct(item.IDSP).Name</h5>

                                                    <input type="text" value="@item.IDSP" name="idsp" hidden style="display: none">
                                                </td>
                                                <td class="shoping__cart__price">
                                                    @int.Parse(item.price).ToString("#,##0").Replace(",", ".") VNĐ
                                                </td>
                                                <td class="shoping__cart__quantity">
                                                    @item.Amount
                                                </td>
                                                <td class="shoping__cart__total">
                                                    @int.Parse(item.IntoMoney).ToString("#,##0").Replace(",", ".") VNĐ
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
@section animation{
    <script>
        var body = $("html, body");
        body.animate({ scrollTop: 738 });
    </script>
}

