
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
<link href="https://fonts.googleapis.com/css?family=Montserrat:500,700" rel="stylesheet">

<section class="breadcrumb-section set-bg" data-setbg="/Content/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Login</h2>
                    <div class="breadcrumb__option">
                        <a href="/Home/Index">Home</a>
                        <span>Login</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <div class="row">

                <div class="login-popup-sec">
                    <div class="login-content">
                        <ul>
                            <li>
                                <input id="user" type="text" placeholder="Your Username">
                            </li>
                            <li>
                                <input id="password" type="password" placeholder="Your Password">
                            </li>
                            <li>
                                <button id="submit_login" class="login-btn" type="submit">Login</button>
                            </li>
                            <li>
                                <h3>Or</h3>
                            </li>
                            <li> <a href="#"><img src="~/Content/Image/BackGround/fb-icon-btn.png" class="social-icon" alt=" "></a> </li>
                            <li> <a href="#"><img src="~/Content/Image/BackGround/gplus-icons-btn.png" class="social-icon" alt=" "></a> </li>
                            <div class="login_user">
                                <h4><a class="txtRes" href="/Home/Res">Register account</a></h4>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section animation{
    <script>

        var body = $("html, body");
        body.animate({ scrollTop: 738 });
    </script>
}
