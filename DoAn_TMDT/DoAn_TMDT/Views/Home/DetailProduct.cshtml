@section addcart{
    <script>
        $("#sendcomment").click(function () {
            var form = new FormData();
            var idsp = @Model.IDSP;
            var text = $("#textcomment").val();
            if (text != "") {
                form.append("IDSP", idsp);
                form.append("text", text);
                var xhr = new XMLHttpRequest();
                xhr.open("POST", "/Home/SendComment", true);
                xhr.onreadystatechange = function () {
                    if (xhr.status == 200 && xhr.readyState == 4) {
                        var json = JSON.parse(xhr.responseText);
                        if (json.Data.status == "OK") {
                            alert("Comment Success");
                            $("#textcomment").val("");
                        }
                        else {
                            alert("Commnet Fail");
                        }
                    }
                }
                xhr.send(form);
            } else {
                alert("Vui lòng nhập thông tin");
            }
        });
        function addcart() {
        var form = new FormData();
        var idsp = @Model.IDSP ;
        var soluonght = @Model.Amount;
        var soluongmua = $("#soluongmua").val();
        if (soluonght < soluongmua) {
            alert("Số lượng hàng: " + soluonght);
        } else if (soluongmua == 0) {
            alert("Số lượng mua ít nhất là 1");
        }
        else {
            form.append("idsp", idsp);
            form.append("soluong", soluongmua);
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Home/AddCart", true);
            xhr.onreadystatechange = function () {
                if (xhr.status == 200 && xhr.readyState == 4) {
                    var json = JSON.parse(xhr.responseText);
                    if (json.Data.status == "OK") {
                        window.location = "/Home/Cart";
                    } else if (json.Data.status == "ERAm") {
                        alert("Sản phẩm chỉ còn: " + json.Data.soluongmua);
                    }
                    else {
                        alert("Add Fail");
                    }
                }
            }
            xhr.send(form);
        }
        }
        function addcartt(id) {
        var form = new FormData();
        var idsp = id;
        var soluongmua = 1;
            form.append("idsp", idsp);
            form.append("soluong", soluongmua);
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Home/AddCart", true);
            xhr.onreadystatechange = function () {
                if (xhr.status == 200 && xhr.readyState == 4) {
                    var json = JSON.parse(xhr.responseText);
                    if (json.Data.status == "OK") {
                        window.location = "/Home/Cart";
                    } else if (json.Data.status == "ERAm") {
                        alert("Sản phẩm chỉ còn: " + json.Data.soluongmua);
                    }
                    else {
                        alert("Add Fail");
                    }
                }
            }
            xhr.send(form);
        }
        var body = $("html, body");
        body.animate({ scrollTop: 738 });

        /********************/
        window.setTimeout("Comment(1)", 0);
        function Comment(thutu) {
            var form = new FormData();
            form.append("thutu", thutu);
            form.append("IDSP",@Model.IDSP);
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Home/JSCM", true);
            xhr.onreadystatechange = function () {
                if (xhr.status == 200 && xhr.readyState == 4) {
                    var js = JSON.parse(xhr.responseText);
                    if (js.Data.status == "OK") {
                        if (js.Data.Name == "@user") {
                            $("#Comment").append("<div class='cmt_box' id='xoacmm_" + thutu + "'><h4><img src='/Content/Image/Members/icons-customer.png' alt='err 404' />" + js.Data.Name + "</h4><div class='cmt_fill' style='display: inline-block'><p>" + js.Data.Comment + "</p></div>&ensp;<a style='display: inline-block' class='primary-btn' href='javascript: xoacm(" + thutu +")'>Delete</a></div>");
                        } else {
                            $("#Comment").append("<div class='cmt_box'><h4><img src='/Content/Image/Members/icons-customer.png' alt='err 404' />" + js.Data.Name + "</h4><div class='cmt_fill'><p>" + js.Data.Comment + "</p></div></div>");
                        }
                        
                        setTimeout("Comment(" + (thutu - 1 + 2) + ")", 0);
                    } else if (js.Data.status == "OKK") {
                        setTimeout("Comment(" + (thutu - 1 + 2) + ")", 0);
                    } else {
                        setTimeout("Comment(" + thutu  + ")", 0);
                    }
                }
            }
            xhr.send(form);
        }
        function xoacm(id) {
            if (confirm("Bạn có muốn xóa comment")) {
                var form = new FormData();
                form.append("idcm", id);
                var xhr = new XMLHttpRequest();
                xhr.open("POST", "/Home/RemoveCM", true);
                xhr.onreadystatechange = function () {
                    if (xhr.status == 200 && xhr.readyState == 4) {
                        var json = JSON.parse(xhr.responseText);
                        if (json.Data.status == "OK") {
                            $("#xoacmm_" + id).remove();
                            alert("Delete Success");
                        }
                        else {
                            alert("Delete Fail");
                        }
                    }
                }
                xhr.send(form);
            }
        }
        function clickOn(id) {
            $("#cmb_" + id).toggle();
        }
    </script>
}
